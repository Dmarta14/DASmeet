<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dasmeet.FormularioGustos">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2D7D5"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F2D7D5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            app:srcCompat="@drawable/dasmeetlogo" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="415dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Formulario de los gustos que tiene que tener la otra persona"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Pregunta nº 1: ¿Cúal es el sexo que te atrae?                           (Puedes marcar varias opciones)"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_respuestas1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/opcion1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hombre" />

                        <CheckBox
                            android:id="@+id/opcion2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mujer" />

                        <CheckBox
                            android:id="@+id/opcion3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Otro" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Pregunta nº 2: ¿Cuál es el color de ojos que te gusta? (Puedes marcar varias opciones)"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_respuestas2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/opcion4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marrones" />

                        <CheckBox
                            android:id="@+id/opcion5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Azules" />

                        <CheckBox
                            android:id="@+id/opcion6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verdes" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Pregunta nº 3: ¿Cuál es el color de pelo que te atrae? (Puedes marcar varias opciones)"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_respuestas3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/opcion7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rubio" />

                        <CheckBox
                            android:id="@+id/opcion8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Castaño" />

                        <CheckBox
                            android:id="@+id/opcion9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moreno" />

                        <CheckBox
                            android:id="@+id/opcion10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Otro (Pelirrojo, Azul, Verde, Rosa....)" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Pregunta nº 4: ¿Cómo te gusta que sea una persona? (Puedes marcar varias opciones)"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_respuestas4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/opcion11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gracioso/a" />

                        <CheckBox
                            android:id="@+id/opcion12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alegre" />

                        <CheckBox
                            android:id="@+id/opcion13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simpatico/a" />

                        <CheckBox
                            android:id="@+id/opcion14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Borde" />

                        <CheckBox
                            android:id="@+id/opcion15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cabezon/a" />

                        <CheckBox
                            android:id="@+id/opcion16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humilde" />

                        <CheckBox
                            android:id="@+id/opcion17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fiel" />

                        <CheckBox
                            android:id="@+id/opcion18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Impuntual" />
                        <CheckBox
                            android:id="@+id/opcion19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cariñoso" />


                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Pregunta nº 5: ¿Qué hobbies te gustaría que la otra persona practique? (Marque todos cuales quiera)"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_respuestas5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/opcion20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leer" />

                        <CheckBox
                            android:id="@+id/opcion21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hacer deporte" />

                        <CheckBox
                            android:id="@+id/opcion22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salir de fiesta" />

                        <CheckBox
                            android:id="@+id/opcion23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ir al cine" />


                        <CheckBox
                            android:id="@+id/opcion24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Otro" />

                    </RadioGroup>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/parte3formulario">

                    </ImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/Cancelar"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="155dp"
                            android:layout_height="50dp"
                            android:backgroundTint="#1DF7F7F6"
                            android:onClick="cerrarPantalla"
                            android:text="Volver"
                            android:textColor="#03A9F4"
                            android:textSize="20sp"
                            app:cornerRadius="100dp"
                            app:iconPadding="2dp"
                            app:strokeColor="#03A9F4"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:id="@+id/textView126"
                            android:layout_width="25dp"
                            android:layout_height="14dp" />
                        <Button
                            android:id="@+id/Siguiente"
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="2dp"
                            android:backgroundTint="#D200BCD4"
                            android:onClick="registrarUsuario"
                            android:layout_marginTop="8dp"
                            android:text="SIGUIENTE"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="italic"
                            app:cornerRadius="20dp"
                            app:iconPadding="2dp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

