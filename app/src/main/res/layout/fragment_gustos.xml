                            android:layout_height="wrap_content"
                            android:text="@string/borde" />

                        <CheckBox
                            android:id="@+id/opcion15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cabezon" />

                        <CheckBox
                            android:id="@+id/opcion16"
                            android:layout_width="wrap_content"
