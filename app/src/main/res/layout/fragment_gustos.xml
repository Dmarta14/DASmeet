                            android:text="@string/humilde" />

                        <CheckBox
                            android:id="@+id/opcion17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fiel" />

                        <CheckBox
                            android:id="@+id/opcion18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/impuntual" />
                        <CheckBox
                            android:id="@+id/opcion19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/carino" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/p5g"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_respuestas5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/opcion20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/leer" />

                        <CheckBox
                            android:id="@+id/opcion21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/deporte" />

                        <CheckBox
                            android:id="@+id/opcion22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fiesta" />

                        <CheckBox
                            android:id="@+id/opcion23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cine" />


                        <CheckBox
                            android:id="@+id/opcion24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/o" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/Cancelar"
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="8dp"

                            android:src="@drawable/baseline_arrow_back_24"

                            />


                        <TextView

                            android:layout_width="20dp"
                            android:layout_height="14dp" />

                        <ImageView
                            android:id="@+id/Guardar"
                            android:layout_width="155dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="8dp"

                            android:src="@drawable/baseline_save_24"
                            />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>